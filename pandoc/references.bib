pmid = {10747042},
title = {{Evidence that stationary-phase hypermutation in the Escherichia coli chromosome is promoted by recombination.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=1461015\&tool=pmcentrez\&rendertype=abstract},
volume = {154},
