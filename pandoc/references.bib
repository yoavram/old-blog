journal = {Theoretical population biology},
keywords = {Biological Evolution,Gene Frequency,Gene Frequency: genetics,Genetic,Genetic: genetics,Genotype,Humans,Models,Monte Carlo Method,Mutation,Mutation: genetics,Population Density,Recombination,Selection,Stochastic Processes,Time Factors},
