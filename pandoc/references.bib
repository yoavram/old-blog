keywords = {Bacterial,Bacterial Proteins,Bacterial Proteins: genetics,Biological Evolution,Chromosomes,Escherichia coli,Escherichia coli Proteins,Escherichia coli: genetics,Exodeoxyribonuclease V,Exodeoxyribonucleases,Exodeoxyribonucleases: genetics,Genetic,Mutation,Recombination},
