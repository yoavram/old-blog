month = jul,
number = {7254},
pages = {510--4},
pmid = {19578359},
title = {{Partial penetrance facilitates developmental evolution in bacteria.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2716064\&tool=pmcentrez\&rendertype=abstract},
volume = {460},
year = {2009}
}
